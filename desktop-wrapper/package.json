{
  "name": "collektor",
  "version": "0.1.1",
  "description": "Collektor - simple collection manager to keep tracking all your collections",
  "main": "src/app/main.js",
  "scripts": {
    "prepare-vendor": "npx shx mkdir -p ./vendor && npx shx rm -f ./vendor/*",
    "copy-jvm-to-vendor": "npx shx cp ../backend/target/collektor-*-runner.jar ./vendor/collektor-web.jar",
    "copy-jar-to-vendor": "npx shx cp -r ../backend/target/runtime-image ./vendor/jvm",
    "postinstall": "npm run prepare-vendor && npm run copy-jvm-to-vendor && npm run copy-jar-to-vendor",
    "start": "electron-forge start",
    "test": "exit 0",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "electron": "^11.2.2",
    "shx": "^0.3.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "tree-kill": "^1.2.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "collektor_desktop_wrapper"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "kuroidoruido",
              "name": "Collektor"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
