{
  "routes": [
    {
      "method": "GET",
      "path": "/items",
      "handler": "Item.find",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/items/count",
      "handler": "Item.count",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/items/:id",
      "handler": "Item.findOne",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "POST",
      "path": "/items",
      "handler": "Item.create",
      "config": {
        "policies": ["setOwner"]
      }
    },
    {
      "method": "PUT",
      "path": "/items/:id",
      "handler": "Item.update",
      "config": {
        "policies": ["setOwner"]
      }
    },
    {
      "method": "DELETE",
      "path": "/items/:id",
      "handler": "Item.destroy",
      "config": {
        "policies": ["isOwner"]
      }
    }
  ]
}
