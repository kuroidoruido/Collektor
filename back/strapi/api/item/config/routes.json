{
  "routes": [
    {
      "method": "GET",
      "path": "/items",
      "handler": "Item.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/items/count",
      "handler": "Item.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/items/:id",
      "handler": "Item.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/items",
      "handler": "Item.create",
      "config": {
        "policies": [
          "onlyOwnerCanWrite"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/items/:id",
      "handler": "Item.update",
      "config": {
        "policies": [
          "onlyOwnerCanWrite"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/items/:id",
      "handler": "Item.destroy",
      "config": {
        "policies": [
          "onlyOwnerCanWrite"
        ]
      }
    }
  ]
}
