{
  "routes": [
    {
      "method": "GET",
      "path": "/collections",
      "handler": "Collection.find",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/collections/count",
      "handler": "Collection.count",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/collections/:id",
      "handler": "Collection.findOne",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "POST",
      "path": "/collections",
      "handler": "Collection.create",
      "config": {
        "policies": ["setOwner"]
      }
    },
    {
      "method": "PUT",
      "path": "/collections/:id",
      "handler": "Collection.update",
      "config": {
        "policies": ["setOwner"]
      }
    },
    {
      "method": "DELETE",
      "path": "/collections/:id",
      "handler": "Collection.destroy",
      "config": {
        "policies": ["isOwner"]
      }
    }
  ]
}
